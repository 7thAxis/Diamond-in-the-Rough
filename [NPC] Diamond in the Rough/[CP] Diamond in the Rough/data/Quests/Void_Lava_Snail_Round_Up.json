                    "Trigger": "DayEnding",
                    "Id": "{{ModID}}_TriggerActions.VoidLavaSnailRoundUp.Phase.1",
                    "Condition": "PLAYER_STAT Current VoidLavaSnailsGiven 20",
                    "Actions": [ "AddMail Current DitR_M_SnailPhase1 tomorrow" ]
                },

